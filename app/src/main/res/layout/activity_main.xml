<?xml version="1.0" encoding="utf-8"?>
<com.xxx.text.residelayoutdemo.ResideLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reside_layout"
    >

    <!--菜单列表-->
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/stars"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="一切皆有可能....."
                />


            <ListView
                android:layout_marginTop="50dp"
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>



    </FrameLayout>

    <!--主界面-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/balloon"/>

        <!--<android.support.v4.view.ViewPager-->
            <!--android:id="@+id/pager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="400dp"-->
            <!--android:layout_margin="32dp"-->
            <!--android:layout_centerInParent="true"-->
            <!--/>-->

    </RelativeLayout>

</com.xxx.text.residelayoutdemo.ResideLayout>
